{
  "design_system": {
    "metadata": {
      "name": "Athletic Premium Design System",
      "version": "1.0.0",
      "description": "A comprehensive design system extracted from Strava, Linear, and Notion, tailored for the Marathon Spectator App",
      "source_applications": [
        "Strava (https://www.strava.com) - Athletic/Fitness UI patterns",
        "Linear (https://linear.app) - Premium dark theme & minimalism",
        "Notion (https://www.notion.com) - Clean, accessible design"
      ]
    },
    "colors": {
      "primary": "#4f46e5",
      "primary_dark": "#4338ca",
      "primary_light": "#6366f1",
      "primary_50": "#eef2ff",
      "primary_100": "#e0e7ff",
      "primary_600": "#4f46e5",
      "primary_700": "#4338ca",
      "primary_800": "#3730a3",
      "secondary": "#10b981",
      "secondary_dark": "#059669",
      "secondary_light": "#34d399",
      "background": "#f8f9ff",
      "background_alt": "#f1f5f9",
      "surface": "#ffffff",
      "surface_elevated": "#ffffff",
      "surface_overlay": "rgba(0, 0, 0, 0.5)",
      "text_primary": "#111827",
      "text_secondary": "#6b7280",
      "text_muted": "#9ca3af",
      "text_inverse": "#ffffff",
      "accent": {
        "error": "#ef4444",
        "error_light": "#fca5a5",
        "success": "#10b981",
        "success_light": "#6ee7b7",
        "warning": "#f59e0b",
        "warning_light": "#fcd34d",
        "info": "#3b82f6",
        "info_light": "#93c5fd",
        "orange": "#f97316",
        "purple": "#a855f7",
        "pink": "#ec4899"
      },
      "functional": {
        "mile_marker": "#3b82f6",
        "water_station": "#06b6d4",
        "entertainment": "#a855f7",
        "start_finish": "#ef4444",
        "facility": "#f97316",
        "spectator_spot": "#10b981"
      },
      "neutral": {
        "50": "#f9fafb",
        "100": "#f3f4f6",
        "200": "#e5e7eb",
        "300": "#d1d5db",
        "400": "#9ca3af",
        "500": "#6b7280",
        "600": "#4b5563",
        "700": "#374151",
        "800": "#1f2937",
        "900": "#111827"
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #4f46e5, #4338ca)",
        "secondary": "linear-gradient(135deg, #10b981, #059669)",
        "hero": "linear-gradient(to bottom right, #eef2ff, #ffffff, #fef3c7)",
        "card_hover": "linear-gradient(135deg, rgba(79, 70, 229, 0.05), rgba(16, 185, 129, 0.05))",
        "strava_inspired": "linear-gradient(135deg, #FC4C02, #d63e00)",
        "linear_inspired": "linear-gradient(135deg, #5e6ad2, #8b95ed)"
      }
    },
    "typography": {
      "font_family_heading": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif",
      "font_family_body": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif",
      "font_family_mono": "'JetBrains Mono', 'Fira Code', 'Courier New', monospace",
      "styles": {
        "h1": {
          "font_size": "3.75rem",
          "font_size_mobile": "2.5rem",
          "font_weight": 700,
          "line_height": 1.1,
          "letter_spacing": "-0.02em",
          "margin_bottom": "1.5rem"
        },
        "h2": {
          "font_size": "2.5rem",
          "font_size_mobile": "2rem",
          "font_weight": 700,
          "line_height": 1.2,
          "letter_spacing": "-0.015em",
          "margin_bottom": "1.25rem"
        },
        "h3": {
          "font_size": "1.875rem",
          "font_size_mobile": "1.5rem",
          "font_weight": 700,
          "line_height": 1.3,
          "letter_spacing": "-0.01em",
          "margin_bottom": "1rem"
        },
        "h4": {
          "font_size": "1.5rem",
          "font_size_mobile": "1.25rem",
          "font_weight": 600,
          "line_height": 1.4,
          "margin_bottom": "0.75rem"
        },
        "h5": {
          "font_size": "1.25rem",
          "font_weight": 600,
          "line_height": 1.4,
          "margin_bottom": "0.5rem"
        },
        "body": {
          "font_size": "1rem",
          "font_weight": 400,
          "line_height": 1.6,
          "color": "text_primary"
        },
        "body_large": {
          "font_size": "1.125rem",
          "font_weight": 400,
          "line_height": 1.6,
          "color": "text_primary"
        },
        "body_small": {
          "font_size": "0.875rem",
          "font_weight": 400,
          "line_height": 1.5,
          "color": "text_secondary"
        },
        "caption": {
          "font_size": "0.75rem",
          "font_weight": 400,
          "line_height": 1.4,
          "color": "text_muted"
        },
        "label": {
          "font_size": "0.875rem",
          "font_weight": 600,
          "line_height": 1.4,
          "text_transform": "uppercase",
          "letter_spacing": "0.05em",
          "color": "text_secondary"
        },
        "button": {
          "font_size": "1rem",
          "font_weight": 600,
          "line_height": 1.2,
          "letter_spacing": "0.01em"
        }
      }
    },
    "spacing": {
      "base_unit": "0.25rem",
      "scale": {
        "0": "0",
        "0.5": "0.125rem",
        "1": "0.25rem",
        "1.5": "0.375rem",
        "2": "0.5rem",
        "2.5": "0.625rem",
        "3": "0.75rem",
        "3.5": "0.875rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "7": "1.75rem",
        "8": "2rem",
        "9": "2.25rem",
        "10": "2.5rem",
        "11": "2.75rem",
        "12": "3rem",
        "14": "3.5rem",
        "16": "4rem",
        "20": "5rem",
        "24": "6rem",
        "28": "7rem",
        "32": "8rem",
        "36": "9rem",
        "40": "10rem",
        "48": "12rem",
        "56": "14rem",
        "64": "16rem"
      },
      "semantic": {
        "xs": "0.5rem",
        "sm": "0.75rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem",
        "4xl": "6rem",
        "5xl": "8rem"
      }
    },
    "border_radius": {
      "none": "0",
      "sm": "0.375rem",
      "base": "0.5rem",
      "md": "0.75rem",
      "lg": "1rem",
      "xl": "1.5rem",
      "2xl": "2rem",
      "3xl": "3rem",
      "full": "9999px",
      "semantic": {
        "button": "9999px",
        "card": "1rem",
        "input": "0.75rem",
        "badge": "9999px",
        "modal": "1.5rem"
      }
    },
    "shadows": {
      "none": "none",
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
      "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
      "colored": {
        "primary": "0 10px 25px -5px rgba(79, 70, 229, 0.3)",
        "secondary": "0 10px 25px -5px rgba(16, 185, 129, 0.3)",
        "error": "0 10px 25px -5px rgba(239, 68, 68, 0.3)"
      }
    },
    "transitions": {
      "duration": {
        "fastest": "100ms",
        "fast": "150ms",
        "normal": "200ms",
        "medium": "300ms",
        "slow": "500ms",
        "slowest": "700ms"
      },
      "timing": {
        "ease": "ease",
        "ease_in": "ease-in",
        "ease_out": "ease-out",
        "ease_in_out": "ease-in-out",
        "linear": "linear",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
        "smooth": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "properties": {
        "all": "all",
        "colors": "background-color, border-color, color, fill, stroke",
        "opacity": "opacity",
        "shadow": "box-shadow",
        "transform": "transform"
      }
    },
    "breakpoints": {
      "xs": "0px",
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px",
      "3xl": "1920px"
    },
    "component_defaults": {
      "Button_primary": {
        "background": "linear-gradient(135deg, #4f46e5, #4338ca)",
        "text_color": "#ffffff",
        "padding": "0.75rem 2rem",
        "padding_mobile": "0.625rem 1.5rem",
        "border_radius": "9999px",
        "font_weight": 600,
        "font_size": "1rem",
        "line_height": 1.2,
        "box_shadow": "0 10px 15px -3px rgba(79, 70, 229, 0.3)",
        "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
        "hover_state": {
          "transform": "translateY(-2px) scale(1.02)",
          "box_shadow": "0 20px 25px -5px rgba(79, 70, 229, 0.4)"
        },
        "active_state": {
          "transform": "translateY(0) scale(0.98)"
        },
        "disabled_state": {
          "opacity": 0.5,
          "cursor": "not-allowed"
        }
      },
      "Button_secondary": {
        "background": "#ffffff",
        "text_color": "#4f46e5",
        "border": "2px solid #e5e7eb",
        "padding": "0.75rem 2rem",
        "border_radius": "9999px",
        "font_weight": 600,
        "font_size": "1rem",
        "transition": "all 0.3s ease",
        "hover_state": {
          "background": "#f9fafb",
          "border_color": "#4f46e5",
          "transform": "translateY(-1px)"
        }
      },
      "Button_ghost": {
        "background": "transparent",
        "text_color": "#6b7280",
        "padding": "0.5rem 1rem",
        "border_radius": "0.75rem",
        "font_weight": 500,
        "hover_state": {
          "background": "rgba(79, 70, 229, 0.1)",
          "text_color": "#4f46e5"
        }
      },
      "Button_icon": {
        "size": "2.5rem",
        "padding": "0.5rem",
        "border_radius": "0.75rem",
        "background": "transparent",
        "hover_state": {
          "background": "rgba(79, 70, 229, 0.1)"
        }
      },
      "Card": {
        "background": "#ffffff",
        "border": "1px solid transparent",
        "border_radius": "1.5rem",
        "box_shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "padding": "2rem",
        "padding_mobile": "1.5rem",
        "transition": "all 0.3s ease",
        "hover_state": {
          "box_shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.15)",
          "transform": "translateY(-4px)",
          "border_color": "rgba(79, 70, 229, 0.1)"
        }
      },
      "Card_feature": {
        "background": "#ffffff",
        "border_radius": "1.5rem",
        "box_shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "padding": "2rem",
        "border_bottom": "4px solid transparent",
        "transition": "all 0.3s ease",
        "hover_state": {
          "box_shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.15)",
          "transform": "translateY(-4px)",
          "border_bottom_color": "#4f46e5"
        }
      },
      "Card_elevated": {
        "background": "#ffffff",
        "border_radius": "1rem",
        "box_shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
        "padding": "2rem"
      },
      "Input": {
        "background": "#ffffff",
        "border": "1px solid #d1d5db",
        "border_radius": "0.75rem",
        "padding": "0.75rem 1rem",
        "font_size": "1rem",
        "color": "#111827",
        "transition": "all 0.2s ease",
        "placeholder_color": "#9ca3af",
        "focus_state": {
          "border_color": "#4f46e5",
          "outline": "2px solid rgba(79, 70, 229, 0.2)",
          "outline_offset": "2px",
          "box_shadow": "0 0 0 3px rgba(79, 70, 229, 0.1)"
        },
        "error_state": {
          "border_color": "#ef4444",
          "focus_border_color": "#ef4444",
          "focus_outline": "2px solid rgba(239, 68, 68, 0.2)"
        }
      },
      "Badge": {
        "background": "rgba(79, 70, 229, 0.1)",
        "text_color": "#4f46e5",
        "padding": "0.375rem 0.75rem",
        "border_radius": "9999px",
        "font_size": "0.875rem",
        "font_weight": 600,
        "line_height": 1,
        "text_transform": "none"
      },
      "Badge_new": {
        "background": "#f97316",
        "text_color": "#ffffff",
        "padding": "0.25rem 0.625rem",
        "border_radius": "9999px",
        "font_size": "0.75rem",
        "font_weight": 700,
        "text_transform": "uppercase",
        "letter_spacing": "0.05em"
      },
      "Badge_status": {
        "success": {
          "background": "rgba(16, 185, 129, 0.1)",
          "text_color": "#059669",
          "border": "1px solid rgba(16, 185, 129, 0.2)"
        },
        "error": {
          "background": "rgba(239, 68, 68, 0.1)",
          "text_color": "#dc2626",
          "border": "1px solid rgba(239, 68, 68, 0.2)"
        },
        "warning": {
          "background": "rgba(245, 158, 11, 0.1)",
          "text_color": "#d97706",
          "border": "1px solid rgba(245, 158, 11, 0.2)"
        },
        "info": {
          "background": "rgba(59, 130, 246, 0.1)",
          "text_color": "#2563eb",
          "border": "1px solid rgba(59, 130, 246, 0.2)"
        }
      },
      "Icon_badge": {
        "size": "4rem",
        "size_mobile": "3rem",
        "background": "linear-gradient(135deg, #4f46e5, #4338ca)",
        "border_radius": "1rem",
        "padding": "1rem",
        "box_shadow": "0 10px 15px -3px rgba(79, 70, 229, 0.3)",
        "icon_size": "2rem",
        "icon_color": "#ffffff"
      },
      "Sidebar": {
        "background": "#ffffff",
        "width": "20rem",
        "width_mobile": "100%",
        "border_radius": "1rem",
        "box_shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
        "padding": "0",
        "border": "1px solid #e5e7eb",
        "backdrop_filter": "blur(8px)"
      },
      "Navigation": {
        "background": "linear-gradient(to right, #4f46e5, #4338ca)",
        "height": "4rem",
        "padding": "0 1rem",
        "box_shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "backdrop_filter": "blur(8px)",
        "text_color": "#ffffff"
      },
      "Modal": {
        "background": "#ffffff",
        "border_radius": "1.5rem",
        "box_shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.5)",
        "padding": "2rem",
        "max_width": "32rem",
        "overlay_background": "rgba(0, 0, 0, 0.5)",
        "backdrop_filter": "blur(4px)"
      },
      "Toast": {
        "background": "#111827",
        "text_color": "#ffffff",
        "border_radius": "0.75rem",
        "padding": "1rem 1.5rem",
        "box_shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.3)",
        "min_width": "20rem",
        "success": {
          "background": "#10b981",
          "icon_color": "#ffffff"
        },
        "error": {
          "background": "#ef4444",
          "icon_color": "#ffffff"
        },
        "warning": {
          "background": "#f59e0b",
          "icon_color": "#ffffff"
        }
      },
      "Tooltip": {
        "background": "#1f2937",
        "text_color": "#ffffff",
        "padding": "0.5rem 0.75rem",
        "border_radius": "0.5rem",
        "font_size": "0.875rem",
        "box_shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.2)",
        "arrow_size": "0.5rem"
      },
      "Loading_skeleton": {
        "background": "#e5e7eb",
        "highlight_color": "#f3f4f6",
        "border_radius": "0.5rem",
        "animation_duration": "1.5s"
      }
    },
    "iconography": {
      "library": "Lucide React",
      "sizes": {
        "xs": "1rem",
        "sm": "1.25rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "2.5rem",
        "2xl": "3rem"
      },
      "stroke_width": {
        "thin": 1,
        "regular": 1.5,
        "medium": 2,
        "bold": 2.5
      }
    },
    "animations": {
      "fade_in": {
        "keyframes": "opacity: 0 -> 1",
        "duration": "300ms",
        "timing": "ease-out"
      },
      "fade_out": {
        "keyframes": "opacity: 1 -> 0",
        "duration": "300ms",
        "timing": "ease-in"
      },
      "slide_in_up": {
        "keyframes": "transform: translateY(10px), opacity: 0 -> transform: translateY(0), opacity: 1",
        "duration": "300ms",
        "timing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "slide_in_down": {
        "keyframes": "transform: translateY(-10px), opacity: 0 -> transform: translateY(0), opacity: 1",
        "duration": "300ms",
        "timing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "scale_in": {
        "keyframes": "transform: scale(0.95), opacity: 0 -> transform: scale(1), opacity: 1",
        "duration": "200ms",
        "timing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "bounce": {
        "keyframes": "transform: translateY(-5px) -> translateY(0)",
        "duration": "500ms",
        "timing": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      },
      "pulse": {
        "keyframes": "opacity: 1 -> opacity: 0.5 -> opacity: 1",
        "duration": "2000ms",
        "timing": "ease-in-out",
        "iteration": "infinite"
      },
      "spin": {
        "keyframes": "transform: rotate(0deg) -> rotate(360deg)",
        "duration": "1000ms",
        "timing": "linear",
        "iteration": "infinite"
      }
    },
    "z_index": {
      "base": 0,
      "dropdown": 1000,
      "sticky": 1100,
      "fixed": 1200,
      "modal_backdrop": 1300,
      "modal": 1400,
      "popover": 1500,
      "tooltip": 1600,
      "toast": 1700
    }
  }
}

